generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model BotConfig {
  guildID                   String   @id
  owner                     String
  apikey                    String?
  lastNotificationProcessed DateTime @default(now())
  reportAction              String   @default("none")
  revocationAction          String   @default("none")
  guildConfigFiltersHash    String
}

model InfoChannel {
  id        Int    @id @default(autoincrement())
  channelID String @unique
  guildID   String
}

model Command {
  id      String @id
  guildID String
  name    String
}

model Privatebans {
  id         Int      @id @default(autoincrement())
  adminID    String
  createdAt  DateTime @default(now())
  playername String   @unique
  reason     String   @default("No reason")
}

model Whitelist {
  id         Int      @id @default(autoincrement())
  adminID    String
  createdAt  DateTime @default(now())
  playername String   @unique
  reason     String   @default("No reason")
}

model FagcBan {
  id          String @id
  playername  String
  brokenRule  String
  communityID String
}
